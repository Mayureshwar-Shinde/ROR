.card.text-center.position-absolute.top-50.start-50.translate-middle.p-5.text-center{:style => "background-color: rgba(255, 255, 255, 0.8); border: solid whitesmoke 1px; #{user_signed_in? ? 'margin-left: 8%;' : ''}"}
  %div.m-2.display-2 
    Welcome
    - if user_signed_in?
      , #{current_user.first_name.capitalize}!

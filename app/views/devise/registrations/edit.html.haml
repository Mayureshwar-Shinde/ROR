%body{:style => "background-image: url(#{asset_path 'blog.jpg'}); background-size: cover;"}
.card.mx-auto.p-5.mb-5.border-4.border-light{:style => "width: 500px; background-color: rgba(255, 255, 255, 0.75);"}
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = render "devise/shared/error_messages", resource: resource
    %h2
      Edit #{resource_name.to_s.humanize}
    .field.form-group
      = f.label :first_name
      %br/
      = f.text_field :first_name, class: "form-control"
      %br/
    .field.form-group
      = f.label :last_name
      %br/
      = f.text_field :last_name, class: "form-control"
      %br/
    .field.form-group
      = f.label :age
      %br/
      = f.number_field :age, class: "form-control"
      %br/
    .field.form-group
      = f.label :date_of_birth
      %br/
      = f.date_field :date_of_birth, class: "form-control"
      %br/
    .field.form-group
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
      %br/
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .field.form-group
      = f.label :password
      %i (leave blank if you don't want to change it)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "form-control"
      %br/
      - if @minimum_password_length
        %br/
        %em
          = @minimum_password_length
          characters minimum
    .field.form-group
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
      %br/
    .field.form-group
      = f.label :current_password
      %i (we need your current password to confirm your changes)
      %br/
      = f.password_field :current_password, autocomplete: "current-password", class: "form-control"
      %br/
    .actions.form-group
      = f.submit "Update", class:" form-control btn btn-secondary border-dark"
  %br/
  %hr
  %h3 Cancel my account
  %div
    Unhappy? #{button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-danger', data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete}
  %br/
  = link_to "Back", :back
